<script>

function validateName()
{

	var name=document.getElementById("name");
	var regex=/^[a-zA-Z' ']+$/;

	if(!name.value.match(regex)){
		document.getElementById("nerr").innerHTML="name is invalid ...!";
		//window.alert('name is invalid');
		
		name.focus();
		return false;
	}
	else{
		document.getElementById("nerr").innerHTML="";

	}
	
	return true;

}

function validateBranch()
{

	var name=document.getElementById("branch");
	var regex=/^[a-zA-Z]+$/;

	if(!name.value.match(regex)){
		document.getElementById("berr").innerHTML="Branch is invalid ...!";
		//window.alert('name is invalid');
		
		name.focus();
		return false;
	}
	else{
		document.getElementById("berr").innerHTML="";

	}
	
	return true;

}


function validateContact()
{
	var mobile =document.getElementById("mob");
	var regNumber =/^(\+\d{1,3}[- ]?)?\d{10}$/;
	if(!mobile.value.match(regNumber)){
		document.getElementById("cerr").innerHTML="Mobile number is invalid.......!";
		mobile.focus();
		return false;

	}
	else{
		document.getElementById("cerr").innerHTML="";
		
		
	}
	return true;
}

function onSubmit(){
	var pass=document.getElementById("pwd");
	var pass2=document.getElementById("pwdr");


	if(pass.value!=pass2.value){
		document.getElementById("passerr").innerHTML="password doesn't match .....!";
		pass2.focus();
		return false;
	}
	else{
		document.getElementById("passerr").innerHTML="";
		return true;

	}




}
</script>